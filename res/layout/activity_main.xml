<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res/com.android.buzz">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unit: Hz" />

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/btn500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500" />

        <Button
            android:id="@+id/btn1000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000" />

        <Button
            android:id="@+id/btn1500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1500" />

        <Button
            android:id="@+id/btn2000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stop" />

    </LinearLayout>

</LinearLayout>